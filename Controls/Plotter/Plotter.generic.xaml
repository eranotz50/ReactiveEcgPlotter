<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:plotter="clr-namespace:Controls.Plotter">
    
	<Style TargetType="{x:Type plotter:Plotter}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type plotter:Plotter}">
                    <Border x:Name="Container" Background="White">
                        <Image x:Name="PART_Image" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
	
	
</ResourceDictionary>